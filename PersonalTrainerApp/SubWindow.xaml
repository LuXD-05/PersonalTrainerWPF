<Window x:Class="PersonalTrainerApp.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalTrainerApp"
        mc:Ignorable="d" Title="SubWindow"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Border Background="Transparent" CornerRadius="30" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="10"/>
        </Border.Effect>
        
        <ContentControl Name="SubContentControl" Content="{Binding}"/>
        
    </Border>

</Window>
