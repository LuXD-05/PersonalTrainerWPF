<UserControl x:Class="PersonalTrainerApp.Controls.HomeDropShadowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalTrainerApp.Controls"
             mc:Ignorable="d" MinHeight="200" MinWidth="200">
    <Grid>
        <Border Background="{StaticResource Back}" BorderBrush="DarkGray" ClipToBounds="True">
            <Border Background="Transparent" BorderBrush="Black" BorderThickness="0,0,0,10" Margin="0,0,0,-11">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="50"/>
                </Border.Effect>
            </Border>
        </Border>
        <ContentPresenter/>
    </Grid>
</UserControl>
